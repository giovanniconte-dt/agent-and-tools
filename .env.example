# Microsoft SQL Server connection
MSSQL_CONNECTION_STRING=mssql+pyodbc://user:password@localhost:1433/mydb?driver=ODBC+Driver+17+for+SQL+Server

# For local testing without MSSQL (no ODBC driver needed):
# MSSQL_CONNECTION_STRING=sqlite:///./test.db

# Alternative: use separate variables
# MSSQL_HOST=localhost
# MSSQL_PORT=1433
# MSSQL_USER=sa
# MSSQL_PASSWORD=...
# MSSQL_DATABASE=mydb

# Ollama model (default: llama3.2)
OLLAMA_MODEL=llama3.2

# Flask API (optional)
# FLASK_HOST=0.0.0.0
# FLASK_PORT=5000
# FLASK_DEBUG=false
